{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "S3BucketList",
        "Effect": "Allow",
        "Action": [
          "s3:ListBucket"
        ],
        "Resource": "arn:aws:s3:::jeffynewhighlight-final"
      },
      {
        "Sid": "S3ObjectActions",
        "Effect": "Allow",
        "Action": [
          "s3:GetObject",
          "s3:PutObject",
          "s3:DeleteObject"
        ],
        "Resource": "arn:aws:s3:::jeffynewhighlight-final/*"
      },
      {
        "Sid": "DynamoDBTableActions",
        "Effect": "Allow",
        "Action": [
          "dynamodb:PutItem",
          "dynamodb:GetItem",
          "dynamodb:UpdateItem",
          "dynamodb:Query",
          "dynamodb:Scan"
        ],
        "Resource": "arn:aws:dynamodb:us-east-1:102492884144:table/SportsHighlights"
      }
    ]
  }
  
